---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../config';
import Card from '../components/Card.astro';

const about_myself_content: string = "A little bit about myself"
const about_myself_title: string = "Hi my name is Thomas and I'm a passionate about all things Tech.  I'm interested in compilers, language design, security etc. etc. For most of my projects I use rust simply because I fancy the language design a lot and it was the language that was most fun to learn."

const title_2: string = "Experience"
const title_3: string = "Appart from tech"

const content_2: string = "In my previous endeavour at FireStart I've built a business process management platform over the span of three years. So most of my professional experience is with .NET core, Angular and MongoDB. Typical Fullstack. If you wanna check it out you can find it at firestart.com."
const content_3: string = "I'm a passionate powerlifter and try to travel as much as I can. Also all the pictures you see on this website are taken by me."
const title_4: string = "Contact"

const image_src: string = "/images/mainimage.jpg"
---
 
<!DOCTYPE html>
<html lang="en-us">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="flex flex-col w-full selection:bg-yellow-600 p-12">
		<div class="w-[300px] flex justify-center m-auto mt-12">
			<Header></Header>
		</div>
		<main class="flex sm:flex-row m-auto sm:mt-12 mt-0 flex-col-reverse h-full justify-self-center">
			<div class="flex sm:w-[500px] w-full mr-24 flex-col divide-y divide-solid divide-white-100">
				<br>
				<Card title={about_myself_content} content={about_myself_title}></Card>
				<br>
				<Card title={title_2} content={content_2}></Card>
				<br>
				<Card title={title_3} content={content_3}></Card>
				<br>
				<div class="pb-6">
					<h1 class="uppercase py-3 font-bold text-yellow-500" style="font-size: 11px;">{title_4}</h1>
					<p class="font-cardo text-gray-100 sm:pl-24 pl-0" style="font-size: 14px;">
						E-mail: magesthomas@gmail.com
					</p>
					<p class="font-cardo text-gray-100 sm:pl-24 pl-0" style="font-size: 14px;">
						LinkedIn: <a href="https://www.linkedin.com/in/thomas-mages-680b12172/">Thomas Mages</a>
					</p>
				</div>
				

				
			</div>
			<div class="flex drop-shadow-2xl flex-col">
				<br>
				<img src={image_src} width="800px" class="object-contain"/>
			</div>
		</main>
	</body>
</html>
