---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../config';
import Card from '../components/Card.astro';
import { Image } from '@astrojs/image/components';

const about_myself_title: string = "Hi I'm Thomas and I've been a professional Software Engineer for over 3 years now <a href=\"https://twitter.com/thedomasch\">@thedomasch</a>. Till now I've mostly used .NET Core and Angular for the project I built <a href=\"https://www.firestart.com/\">(You can take a look at the companies website here)</a>but since about a year I've grown closer and closer to Rust and enjoyed building with it quite a lot"
const about_myself_content: string = "A little bit about myself"

const title_2: string = "Tilt 2 fill in"
const title_3: string = "Tilt 3 fill in"

const content_2: string = "Content 2 fill in"
const content_3: string = "Content 3 fill in"

const image_src: string = "/images/mainimage.jpeg"
---

<!DOCTYPE html>
<html lang="en-us">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<link href="https://fonts.googleapis.com/css?family=Cardo" rel="stylesheet">
	</head>
	<body class="flex flex-col justify-between h-screen w-full">
		<Header></Header>
		<main class="flex flex-row w-full h-full px-24">
			<div class="flex flex-col divide-y divide-solid divide-blue-100 pr-12">
				<Card title={about_myself_content} content={about_myself_title}></Card>
				<Card title={title_2} content={about_myself_title}></Card>
				<Card title={title_3} content={about_myself_title}></Card>
			</div>
			<div class="flex drop-shadow-2xl">
				<img src={image_src} class="w-full h-auto aspect-[3/2] blur-sm"/>
			</div>
		</main>
		<Footer />
	</body>
</html>
