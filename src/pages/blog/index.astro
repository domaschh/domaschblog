---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import {SITE_TITLE, SITE_DESCRIPTION} from '../../consts';
import {getCollection} from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import Footer from "../../components/Footer.astro";
import Card from "../../components/Card.astro";
import HeaderLink from "../../components/HeaderLink.astro";

const posts = (await getCollection('blog')).sort(
    (a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
<head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION}/>
    <style>
        html.dark span {
            background: #fff0b5;
            color: black;
        }
        html.dark div {
            border-color: rgba(142, 142, 142, 0.45);
        }
        ul {
            display: flex;
            flex-wrap: wrap;
            gap: 2rem;
            list-style-type: none;
            margin: 0;
        }

        ul li {
            width: calc(50% - 1rem);
        }

        ul li * {
            text-decoration: none;
            transition: 0.2s ease;
        }


        ul li:first-child img {
            width: 100%;
        }

        ul li:first-child .title {
            font-size: 2.369rem;
        }

        ul li img {
            margin-bottom: 0.5rem;
        }

        ul li a {
            display: block;
        }

        .title {
            margin: 0;
            line-height: 1;
        }

        .date {
            margin: 0;
            color: ghostwhite;
        }


        html.dark p {
        }

        html.dark a:hover p {
            color: #fff0b5;
        }

        p {
            color: #754c1c;
        }

        $dark-font-primary: #ff0000;

        a:hover p {
            color: #ff0000;
        }

        a:hover {
        }

        @media (max-width: 720px) {
            ul {
                gap: 0.5em;
            }

            ul li {
                width: 100%;
                text-align: center;
            }

            ul li:first-child {
                margin-bottom: 0;
            }

            ul li:first-child .title {
                font-size: 1.563em;
            }
        }
    </style>
</head>
<body class="flex sm:h-[100vh] overflow-scroll h-full w-full flex-col md:w-full content-center sm:px-0">
<main class="flex sm:flex-row  w-full m-auto sm:mt-0 mt-0  justify-center sm:items-start h-full justify-self-center">
    <div class="flex sm:w-1/3 h-full self-center w-full items-center flex-col">
        <Header></Header>
        <div class="h-full sm:mt-10 min-h-[590px]  flex flex-col border-black border-x border-y w-full">
            <section class="flex flex-col w-full items-center aspect-square p-10">
                <ul class=" p-2 h-full flex flex-col w-full items-center ">
                    {
                        posts.slice(0, 10).map((post) => (
                                <li>
                                    <a href={`/blog/${post.slug}/`}
                                       class="border-solid border-b-2 border-white pb-3 sm:border-none">
                                        <div class=" items-center flex flex-col">
                                            <h2 class="text-10xl font-bold">{post.data.title}</h2>
                                            <p> {post.data.pubDate.getFullYear()}</p>

                                            <p class=" px-4 " style="font-family: 'Helvetica'"> {post.data.description}</p>
                                            <p> {post.data.tag}</p>
                                        </div>
                                    </a>
                                </li>
                        ))
                    }
                </ul>
        </div>
        <div class="sm:w-[80%] w-full border justify-center internal-links  mt-10 font-jetbrains flex md:text-[1rem] border-l border-t border-r border-b border-black text-sm p-4 font-extrabold items-center" >
            <HeaderLink href="/">~</HeaderLink>
            <HeaderLink >/</HeaderLink>
            <HeaderLink >about</HeaderLink>
            <HeaderLink >/</HeaderLink>
            <HeaderLink href="/blog">Resume</HeaderLink>
            <HeaderLink >/</HeaderLink>
            <HeaderLink href="/blog">LinkedIn</HeaderLink>
            <HeaderLink >/</HeaderLink>
            <a href="mailto:magesthomas@gmail.com" class="hover:underline text-sm"
               target="_blank">email</a>
        </div>
    </div>
</main>
</body>
</html>
